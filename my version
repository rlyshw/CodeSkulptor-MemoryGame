import simplegui, random

cards = []

def newgame(num):
    lst = range(1,int(num)+1)*2
    random.shuffle(lst)
    return lst

def texthandler(text):
    global cards
    try:
        cards = newgame(inp.get_text())
    except:
        cards = []
        print "Please input a number"
    print cards
    
def new():
    global cards
    try:
        cards = newgame(inp.get_text())
    except:
        cards = []
        print "Please input a number"
    print cards
    
def drawhandler(canvas):
    global cards
    if len(cards)<=16:
        for n in range(len(cards)):
            canvas.draw_text(str(cards[n]), [50*n+10, 75], 55, "Blue")
    else:
        for n in range(len(cards[0:len(cards)/2]))
frame = simplegui.create_frame("Memory", 800, 200)
inp = frame.add_input("# of pairs", texthandler, 50)
frame.add_button("New Game", new)
frame.set_draw_handler(drawhandler)
frame.start()
